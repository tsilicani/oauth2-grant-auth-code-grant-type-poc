{
    "cSpell.words": [
        "dotenv",
        "jsonify",
        "pycache",
        "tojson"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.rulers": [120]
    },
    "isort.args": ["--profile", "black", "--line-length", "120"]
}